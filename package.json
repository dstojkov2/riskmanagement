{
  "name": "risk-management",
  "version": "1.0.0",
  "description": "Template for the the SAP Extension Suite Learning Journey",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@sap/cds": "^5.1.5",
    "@sap/cds-dk": "^4.1.5",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.9",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch-risks": "cds watch --open risks/webapp/index.html#fe-lrop-v4"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/risks"
  ],
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata",
        "model": "srv\\external\\API_BUSINESS_PARTNER"
      }
    }
  }
}